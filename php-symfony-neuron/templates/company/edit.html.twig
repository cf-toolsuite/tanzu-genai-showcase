{% extends 'base.html.twig' %}

{% block title %}Edit {{ company.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Edit {{ company.name }}</h1>
                <div>
                    <a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-secondary me-2">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a href="{{ path('company_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            
            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.tickerSymbol) }}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.industry) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.sector) }}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_row(form.headquarters) }}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.foundedYear) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.employees) }}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            {{ form_row(form.website) }}
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">Update Company</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ company.name }} - Leadership{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ company.name }} - Leadership Profiles</h1>
        <div>
            <a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Company
            </a>
        </div>
    </div>
    
    {% if executives is empty %}
        <div class="alert alert-info">
            <p>No executive profiles are available for this company yet.</p>
            <hr>
            <p class="mb-0">Leadership profiles can be generated using AI or manually added with verified information.</p>
        </div>
        
        <div class="text-center my-5">
            <button class="btn btn-primary" id="generateLeadership">
                <i class="fas fa-robot"></i> Generate Leadership Profiles with AI
            </button>
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
            {% for executive in executives %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {% if executive.photoUrl %}
                            <img src="{{ executive.photoUrl }}" class="card-img-top executive-photo" alt="{{ executive.name }}">
                        {% else %}
                            <div class="card-img-top executive-placeholder d-flex align-items-center justify-content-center bg-light">
                                <span class="fa-stack fa-3x">
                                    <i class="fas fa-circle fa-stack-2x text-secondary opacity-25"></i>
                                    <i class="fas fa-user fa-stack-1x text-secondary"></i>
                                </span>
                            </div>
                        {% endif %}
                        
                        <div class="card-body">
                            <h5 class="card-title">{{ executive.name }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ executive.title }}</h6>
                            
                            {% if executive.bio %}
                                <p class="card-text executive-bio">{{ executive.bio|u.truncate(150, '...') }}</p>
                                <button class="btn btn-sm btn-outline-primary view-bio-btn" data-name="{{ executive.name }}" data-title="{{ executive.title }}" data-bio="{{ executive.bio }}">
                                    View Full Bio
                                </button>
                            {% else %}
                                <p class="card-text text-muted fst-italic">No biography available</p>
                            {% endif %}
                        </div>
                        <ul class="list-group list-group-flush">
                            {% if executive.previousCompanies %}
                                <li class="list-group-item">
                                    <small class="text-muted">Previous Companies:</small><br>
                                    {{ executive.previousCompanies }}
                                </li>
                            {% endif %}
                            
                            {% if executive.education %}
                                <li class="list-group-item">
                                    <small class="text-muted">Education:</small><br>
                                    {{ executive.education }}
                                </li>
                            {% endif %}
                            
                            {% if executive.startYear %}
                                <li class="list-group-item">
                                    <small class="text-muted">At Company Since:</small><br>
                                    {{ executive.startYear }}
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <!-- Export buttons -->
        <div class="d-flex justify-content-end mb-4">
            <div class="btn-group">
                <a href="#" class="btn btn-outline-primary" id="exportLeadershipPdf">
                    <i class="far fa-file-pdf"></i> Export to PDF
                </a>
            </div>
        </div>
    {% endif %}
</div>

<!-- Executive Bio Modal -->
<div class="modal fade" id="executiveBioModal" tabindex="-1" aria-labelledby="executiveBioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="executiveBioModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class="text-muted mb-3" id="executiveTitle"></h6>
                <p id="executiveBio"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Export button
        const exportPdfBtn = document.getElementById('exportLeadershipPdf');
        if (exportPdfBtn) {
            exportPdfBtn.addEventListener('click', function(e) {
                e.preventDefault();
                alert('PDF export functionality will be implemented here');
            });
        }
        
        // Generate button
        const generateBtn = document.getElementById('generateLeadership');
        if (generateBtn) {
            generateBtn.addEventListener('click', function() {
                const btn = this;
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating Profiles...';
                
                // Make AJAX request to generate leadership profiles
                fetch('{{ path('company_generate_leadership', {'id': company.id}) }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        window.location.reload(); // Reload page to show new data
                    } else {
                        alert('Error: ' + data.message);
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-robot"></i> Generate Leadership Profiles with AI';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while generating leadership profiles');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-robot"></i> Generate Leadership Profiles with AI';
                });
            });
        }
        
        // Bio modal functionality
        const bioButtons = document.querySelectorAll('.view-bio-btn');
        const bioModal = new bootstrap.Modal(document.getElementById('executiveBioModal'));
        
        bioButtons.forEach(button => {
            button.addEventListener('click', function() {
                const name = this.getAttribute('data-name');
                const title = this.getAttribute('data-title');
                const bio = this.getAttribute('data-bio');
                
                document.getElementById('executiveBioModalLabel').textContent = name;
                document.getElementById('executiveTitle').textContent = title;
                document.getElementById('executiveBio').textContent = bio;
                
                bioModal.show();
            });
        });
    });
</script>
{% endblock %}

{% block stylesheets %}
<style>
    .executive-photo {
        height: 250px;
        object-fit: cover;
    }
    
    .executive-placeholder {
        height: 250px;
    }
    
    .executive-bio {
        min-height: 80px;
    }
</style>
{% endblock %}
{% endblock %}

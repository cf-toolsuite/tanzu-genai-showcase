{% extends 'base.html.twig' %}

{% block title %}{{ company.name }} - Leadership Team{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .executive-card {
            margin-bottom: 2rem;
            transition: transform 0.2s;
        }

        .executive-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
        }

        .executive-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 1rem;
        }

        .executive-placeholder {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: 300;
            color: #6c757d;
            margin-bottom: 1rem;
        }

        .executive-name {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .executive-title {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 1rem;
        }

        .section-heading {
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #dee2e6;
        }

        .bio-section {
            margin-bottom: 1.5rem;
        }

        .bio-heading {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .linkedin-badge {
            display: inline-flex;
            align-items: center;
            background-color: #0077b5;
            color: white;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            transition: background-color 0.2s;
            margin-top: 0.5rem;
        }

        .linkedin-badge:hover {
            background-color: #005e93;
            color: white;
            text-decoration: none;
        }

        .linkedin-icon {
            margin-right: 0.5rem;
        }

        .connection-count {
            display: inline-block;
            font-size: 0.875rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('company_index') }}">Companies</a></li>
            <li class="breadcrumb-item"><a href="{{ path('company_show', {'id': company.id}) }}">{{ company.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Leadership</li>
        </ol>
    </nav>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ company.name }} Leadership</h1>

        <div class="d-flex">
            <a href="{{ path('executive_profile_new', {'id': company.id}) }}" class="btn btn-outline-primary me-2">
                <i class="fas fa-user-plus me-2"></i> Add Executive
            </a>

            <button id="generate-executives" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateModal">
                <i class="fas fa-magic me-2"></i> Generate Executives
            </button>
        </div>
    </div>

    {% if executives is empty %}
        <div class="alert alert-info">
            <h4 class="alert-heading">No Executive Profiles Found</h4>
            <p>This company doesn't have any executive profiles yet. You can generate executive profiles automatically or add them manually.</p>
            <hr>
            <p class="mb-0">Use the "Generate Executives" button to create profiles automatically, or "Add Executive" to create a profile manually.</p>
        </div>
    {% else %}
        <!-- Grid of executive cards -->
        <div class="row">
            {% for executive in executives %}
                <div class="col-md-6 col-lg-4">
                    <div class="card executive-card">
                        <div class="card-body text-center">
                            <div class="executive-placeholder mx-auto">
                                {{ executive.name|first }}
                            </div>

                            <h3 class="executive-name">{{ executive.name }}</h3>
                            <p class="executive-title">{{ executive.title }}</p>

                            {% if executive.linkedinProfileUrl %}
                                <a href="{{ executive.linkedinProfileUrl }}" target="_blank" class="linkedin-badge d-inline-block">
                                    <i class="fab fa-linkedin linkedin-icon"></i> LinkedIn Profile
                                </a>
                            {% endif %}

                            <div class="bio-section text-start mt-3">
                                {% if executive.education %}
                                    <div class="mb-2">
                                        <h5 class="bio-heading">Education</h5>
                                        <p>{{ executive.education }}</p>
                                    </div>
                                {% endif %}

                                {% if executive.previousCompanies %}
                                    <div class="mb-2">
                                        <h5 class="bio-heading">Previous Companies</h5>
                                        <p>{{ executive.previousCompanies }}</p>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="d-flex justify-content-between mt-2">
                                <a href="{{ path('executive_profile_show', {'id': executive.id}) }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-eye me-1"></i> View
                                </a>
                                <a href="{{ path('executive_profile_edit', {'id': executive.id}) }}" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <!-- Modal for generating executives -->
    <div class="modal fade" id="generateModal" tabindex="-1" aria-labelledby="generateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="generateModalLabel">Generate Executive Profiles</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>This will search for and generate executive profiles for {{ company.name }} using Hunter.io API and AI enhancement.</p>
                    <p class="text-muted">Note: This will try to find the company's C-level executives (CEO, CFO, CTO, CMO) and create profiles with available information.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="confirm-generate" class="btn btn-primary">Generate Profiles</button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateButton = document.getElementById('confirm-generate');
            if (generateButton) {
                generateButton.addEventListener('click', function() {
                    // Show loading indicator
                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Generating...';
                    this.disabled = true;

                    // Send AJAX request to generate executives
                    fetch('{{ path('company_generate_leadership', {'id': company.id}) }}', {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Reload the page to show new executives
                            window.location.reload();
                        } else {
                            alert('Error: ' + data.message);
                            this.innerHTML = 'Generate Profiles';
                            this.disabled = false;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred while generating executive profiles.');
                        this.innerHTML = 'Generate Profiles';
                        this.disabled = false;
                    });
                });
            }
        });
    </script>
{% endblock %}

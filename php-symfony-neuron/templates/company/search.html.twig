{% extends 'base.html.twig' %}

{% block title %}Company Search{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .search-header {
            padding: 2rem;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .result-item {
            position: relative;
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 0.5rem;
        }

        .result-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
            z-index: 10;
        }

        .stock-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            background-color: #e9ecef;
            color: #495057;
            margin-right: 0.5rem;
            font-weight: 500;
        }

        .sector-badge {
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            background-color: #007bff;
            color: white;
        }

        .api-result {
            border-left: 5px solid #6c757d;
        }

        .db-result {
            border-left: 5px solid #28a745;
        }

        .data-source-label {
            font-size: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.35rem;
            color: #6c757d;
        }

        .search-results-count {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .search-results-container {
            overflow-y: auto;
            margin-bottom: 2rem;
            padding-right: 0.25rem;
            padding-left: 0.25rem;
            overflow-x: hidden; /* Prevent horizontal scrolling */
            width: 100%;
        }

        .actions-container {
            position: sticky;
            bottom: 0;
            background-color: #fff;
            padding: 1rem 0;
            border-top: 1px solid #eee;
            margin-top: 1rem;
            z-index: 10;
        }

        .card {
            height: 100%; /* Ensure consistent height */
            margin-bottom: 0.5rem;
            box-sizing: border-box; /* Include padding in width calculation */
            width: 100%; /* Full width of container */
        }

        /* Fix for Bootstrap row margins causing horizontal scroll */
        .row {
            margin-left: 0;
            margin-right: 0;
        }

        .card-body {
            padding: 1rem;
        }

        .card-footer {
            padding: 0.75rem 1rem;
            background-color: rgba(0, 0, 0, 0.02);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid mt-5 px-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('company_index') }}">Companies</a></li>
            <li class="breadcrumb-item active" aria-current="page">Search</li>
        </ol>
    </nav>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="search-header">
        <h1 class="mb-4">Company Search</h1>

        <div class="mt-3">
            <p>Use the search bar in the navigation menu to find companies by name or ticker symbol.</p>
            <p>Results include both companies in our database and companies from external financial data providers.</p>
            <div class="mt-4">
                <div class="alert alert-info">
                    <h5><i class="bi bi-info-circle"></i> Search Tips</h5>
                    <ul class="mb-0 mt-2">
                        <li>Search for a company name like "Apple" or "Microsoft"</li>
                        <li>Search for a ticker symbol like "AAPL" or "MSFT"</li>
                        <li>Results from our database show complete company information</li>
                        <li>Results from external sources can be imported with a single click</li>
                    </ul>
                </div>
            </div>

            {% if not searchTerm %}
            <div class="mt-4">
                <a href="{{ path('company_new') }}" class="btn btn-outline-primary">
                    <i class="bi bi-plus"></i> Add New Company
                </a>
            </div>
            {% endif %}
        </div>
    </div>

    {% if searchTerm %}
        <h2 class="mb-4">Search Results for "{{ searchTerm }}"</h2>

        {% set totalResults = dbResults|length + apiResults|length %}
        <div class="search-results-count">
            Found {{ totalResults }} result{% if totalResults != 1 %}s{% endif %}: {{ dbResults|length }} from internal database and {{ apiResults|length }} from external sources
            {% if apiError is defined and apiError %}
                <span class="text-warning">(External search services unavailable)</span>
            {% endif %}
        </div>

        {% if dbResults is empty and apiResults is empty %}
            <div class="alert alert-info">
                <h4 class="alert-heading">No results found</h4>
                <p>Your search for "{{ searchTerm }}" did not match any companies in our database or external sources.</p>
                <hr>
                <div class="mt-3 mb-3">
                    <h5>Troubleshooting:</h5>
                    <ul>
                        <li>For company names: Try using a shorter, more general term (e.g., "Google" instead of "Alphabet Inc.")</li>
                        <li>For ticker symbols: Make sure the symbol is correct (e.g., "GOOG" for Google)</li>
                        <li>Try searching by industry (e.g., "Technology") or sector (e.g., "Healthcare")</li>
                    </ul>
                </div>
                <div class="mt-5 text-center">
                    <p>Can't find what you're looking for? You can add it to our database.</p>
                    <a href="{{ path('company_new') }}" class="btn btn-outline-primary">
                        <i class="bi bi-plus"></i> Add New Company
                    </a>
                </div>
            </div>
        {% else %}
            <div class="search-results-container">
                <div class="row g-4">
                <!-- Database Results -->
                {% for company in dbResults %}
                    <div class="col-md-6 col-lg-6 mb-4">
                        <div class="card shadow-sm result-item db-result h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="card-title mb-0">{{ company.name }}</h5>
                                    <span class="stock-badge">{{ company.tickerSymbol }}</span>
                                </div>

                                <div class="mb-3">
                                    <span class="sector-badge">{{ company.sector|default('Sector: Unknown') }}</span>
                                </div>

                                <p class="card-text text-muted">{{ company.description|length > 100 ? company.description|slice(0, 100) ~ '...' : company.description }}</p>

                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-building"></i> {{ company.headquarters }}
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-success data-source-label">
                                        <i class="bi bi-database-fill"></i> Data Source: Company Research Platform Database
                                    </small>
                                    <a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-sm btn-outline-primary">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <!-- API Results -->
                {% for result in apiResults %}
                    <div class="col-md-6 col-lg-6 mb-4">
                        <div class="card shadow-sm result-item api-result h-100">
                                <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="card-title mb-0">{{ result.name }}</h5>
                                    <span class="stock-badge">{{ result.symbol }}</span>
                                </div>

                                {% if result.exchange is defined and result.exchange and result.exchange != 'Unknown' %}
                                <div class="mt-3 mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-building"></i> Exchange: {{ result.exchange }}
                                    </small>
                                </div>
                                {% endif %}
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-secondary data-source-label">
                                        <i class="bi bi-cloud"></i> Data Source: {{ result.provider is defined ? result.provider : 'External API' }}
                                    </small>
                                    <form method="post" action="{{ path('company_import', {'symbol': result.symbol}) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-download me-1"></i> Import to Database
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>

            <div class="actions-container">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="{{ path('company_new') }}" class="btn btn-outline-primary">
                        <i class="bi bi-plus"></i> Add New Company
                    </a>
                    {% if searchTerm %}
                    <div class="text-muted">
                        <small>Can't find what you're looking for? Try using a different search term in the navigation bar.</small>
                    </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}

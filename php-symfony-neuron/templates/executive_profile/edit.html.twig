{% extends 'base.html.twig' %}

{% block title %}Edit Executive Profile - {{ executive.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-section {
            margin-bottom: 2rem;
        }
        .form-section-title {
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #e9ecef;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('company_index') }}">Companies</a></li>
            <li class="breadcrumb-item"><a href="{{ path('company_show', {'id': company.id}) }}">{{ company.name }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('company_leadership', {'id': company.id}) }}">Leadership</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit {{ executive.name }}</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Executive Profile</h1>

        <form method="post" action="{{ path('executive_profile_delete', {'id': executive.id}) }}" onsubmit="return confirm('Are you sure you want to delete this executive profile?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ executive.id) }}">
            <button class="btn btn-outline-danger">
                <i class="fas fa-trash-alt me-1"></i> Delete
            </button>
        </form>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-section">
                    <h3 class="form-section-title">Basic Information</h3>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.title) }}
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="form-section-title">Biography</h3>
                    {{ form_row(form.biography) }}
                </div>

                <div class="form-section">
                    <h3 class="form-section-title">Background</h3>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.education) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.previousCompanies) }}
                        </div>
                    </div>
                </div>


                <div class="form-section">
                    <h3 class="form-section-title">Online Presence</h3>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.linkedinProfileUrl) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('company_leadership', {'id': company.id}) }}" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save Changes
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=your_app_secret_here
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Format described at https://www.doctrine-project.org/projects/doctrine-dbal/en/latest/reference/configuration.html#connecting-using-a-url
DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
#DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/db_name"
###< doctrine/doctrine-bundle ###

###> LLM Configuration ###
# These values are for local development only
# In production on Cloud Foundry, these will be provided by service binding
GENAI_API_KEY=your_genai_api_key
GENAI_BASE_URL=https://api.openai.com/v1
GENAI_MODEL=gpt-4o-mini
###< LLM Configuration ###

###> Financial API Keys ###
# Alpha Vantage API key (used as the primary stock data provider)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
# Rapid (Nokia) API Key; vends former Yahoo Finance data (used as a fallback for stock data)
RAPID_API_KEY=your_rapid_api_key
# News API key (used for fetching financial news)
NEWS_API_KEY=your_news_api_key
# Kaleidoscope API (used for all SEC filings)
KALEIDOSCOPE_API_KEY=your_kaleidoscope_api_key
# Hunter.io API key
HUNTER_API_KEY=your_hunter_api_key
# TradeFeeds API (used for analyst ratings) - optional, if not provided analyst ratings will be unavailable
TRADEFEEDS_API_KEY=your_tradefeeds_api_key
###< Financial API Keys ###

###> Feature Flags ###
# Set to 'true' to use mock data instead of real API calls
USE_MOCK_DATA=false

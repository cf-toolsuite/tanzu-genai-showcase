<div class="flex flex-col h-full">
    <div class="flex items-center justify-between p-4 border-b border-indigo-800">
        <a href="" class="text-white font-semibold text-xl">Travel Advisor</a>
        <button
            title="Navigation menu"
            class="md:hidden text-white focus:outline-none"
            @onclick="ToggleNavMenu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>

    <div class="@(collapseNavMenu ? "hidden" : "block") md:block">
        <nav class="flex flex-col p-4 space-y-2">
            <NavLink href="" Match="NavLinkMatch.All">
                <div class="flex items-center space-x-3 p-2 rounded-md text-white hover:bg-indigo-700 transition duration-150">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                    </svg>
                    <span>Home</span>
                </div>
            </NavLink>

            <NavLink href="advisor">
                <div class="flex items-center space-x-3 p-2 rounded-md text-white hover:bg-indigo-700 transition duration-150">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12 1.586l-4 4v12.828l4-4V1.586zM3.707 3.293A1 1 0 002 4v10a1 1 0 00.293.707L6 18.414V5.586L3.707 3.293zM17.707 5.293L14 1.586v12.828l2.293 2.293A1 1 0 0018 16V6a1 1 0 00-.293-.707z" clip-rule="evenodd" />
                    </svg>
                    <span>Travel Advisor</span>
                </div>
            </NavLink>

            <NavLink href="about">
                <div class="flex items-center space-x-3 p-2 rounded-md text-white hover:bg-indigo-700 transition duration-150">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <span>About</span>
                </div>
            </NavLink>
        </nav>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

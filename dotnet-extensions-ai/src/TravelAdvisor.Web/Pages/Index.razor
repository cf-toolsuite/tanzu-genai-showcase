@page "/"

<PageTitle>Travel Advisor - Home</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Transportation Mode Recommendation Bot</h1>
            <p class="lead mb-5">
                Find the best way to travel from one place to another based on your preferences and needs.
                Our AI assistant will analyze your journey and recommend the most suitable transportation options.
            </p>

            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="mb-4">How it works</h2>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100 mb-3">
                                <div class="card-body p-4">
                                    <div class="mb-3 d-flex justify-content-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                            <span class="h3 text-primary mb-0">1</span>
                                        </div>
                                    </div>
                                    <h3 class="h5 mb-3">Tell us where you're going</h3>
                                    <p class="text-muted">Enter your origin and destination</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100 mb-3">
                                <div class="card-body p-4">
                                    <div class="mb-3 d-flex justify-content-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                            <span class="h3 text-primary mb-0">2</span>
                                        </div>
                                    </div>
                                    <h3 class="h5 mb-3">Share your preferences</h3>
                                    <p class="text-muted">Tell us what matters most to you</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100 mb-3">
                                <div class="card-body p-4">
                                    <div class="mb-3 d-flex justify-content-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                            <span class="h3 text-primary mb-0">3</span>
                                        </div>
                                    </div>
                                    <h3 class="h5 mb-3">Get personalized recommendations</h3>
                                    <p class="text-muted">We'll suggest the best transportation options</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a href="/advisor" class="btn btn-primary btn-lg">Start Planning Your Journey</a>
                    </div>
                </div>
            </div>

            <div class="mt-5 pt-3">
                <h3 class="h4 mb-4">Powered by</h3>
                <div class="d-flex justify-content-center align-items-center flex-wrap gap-3">
                    <div>
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">.NET</span>
                    </div>
                    <div>
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">Microsoft.Extensions.AI</span>
                    </div>
                    <div>
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">Semantic Kernel</span>
                    </div>
                    <div>
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">Google Maps API</span>
                    </div>
                    <div>
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">Tanzu Platform</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
